{
  "name": "sprout-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\""
  },
  "devDependencies": {
    "turbo": "^2.0.6",
    "typescript": "^5.5.2",
    "eslint": "^8.57.0",
    "prettier": "^3.3.2"
  },
  "prettier": "@sprout/prettier-config",
  "packageManager": "npm@10.8.1"
}